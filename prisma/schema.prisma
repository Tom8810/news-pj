generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// ja
model news_ja_datekey {
  id    Int      @id @default(autoincrement())
  date  DateTime
  news  news_ja[]
}

model news_ja {
  id           Int      @id @default(autoincrement())
  datekey_id   Int
  title        String
  text         String   @db.Text
  citation_url String?

  // date テーブルへのリレーション
  datekey      news_ja_datekey @relation(fields: [datekey_id], references: [id])
  // 多対多のリレーションシップ
  news_tags    news_tag_ja[]
}

model tags_ja {
  id          Int      @id @default(autoincrement())
  name        String
  description String?  @db.Text
  news_tags   news_tag_ja[]
}

model news_tag_ja {
  news_id Int
  tag_id  Int
  news    news_ja @relation(fields: [news_id], references: [id])
  tag     tags_ja @relation(fields: [tag_id], references: [id])
  @@id([news_id, tag_id])
}

